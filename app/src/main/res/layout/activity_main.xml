<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.com.androidcompoundicontextview.MainActivity">

    <com.github.aakira.compoundicontextview.CompoundIconTextView
        android:id="@+id/textView"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#3f51b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cit_drawableLeft="@drawable/ic_call"
        app:cit_iconColor="#000"
        app:cit_iconHeight="30dp"
        app:cit_iconWidth="30dp"/>


</android.support.constraint.ConstraintLayout>
